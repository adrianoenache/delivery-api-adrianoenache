# .editorconfig — configurações para Java e Markdown
# https://editorconfig.org

root = true

# Regras padrão para todos os arquivos
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Regras específicas para arquivos Java
[*.java]
indent_style = space
indent_size = 4
tab_width = 4
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Regras específicas para Markdown (manter espaços finais para quebras de linha)
[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off
charset = utf-8
insert_final_newline = true
